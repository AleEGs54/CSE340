<header id="top-header">
	<span class="siteName">
		<a href="/" title="Return to home page">Everest Motors</a>
	</span>
	<div id="tools">
		<% if (!locals.loggedin) { %>
		<a title="Click to log in" href="/account/login">My Account</a>
		<% } else { %>
		<a title="Click to manage your account" href="/account/"
			>Welcome <%= locals.accountData.account_firstname %> |</a
		>
		<a title="Click to logout" href="/account/login">Logout</a>
		<% } %>
	</div>
</header>
